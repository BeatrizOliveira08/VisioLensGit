@page "/Sessao/{Id:int}/excluir"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject TipoDeSessaoDAO tipoDeSessaoDAO;
@inject NavigationManager Navigation;

<link rel="stylesheet" href="bootstrap/agendamento/agendamentoedicao.css" />

<PageTitle>Sessão</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão tipo de sessão - @tipoDeSessao.Categoria</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}


<EditForm Model="tipoDeSessao" OnSubmit="Excluir">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Atenção!</strong>
        <span class="block sm:inline">Esta ação não pode ser desfeita.</span>
        <p class="text-lg">Tem certeza que deseja excluir a sessão <strong>@tipoDeSessao.Categoria</strong>?</p>

    </div>


    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
    <a href="/Sessao" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private TipoDeSessao tipoDeSessao { get; set; } = new();

    protected override void OnInitialized()
    {
        var _sessao = tipoDeSessaoDAO.BuscarPorId(Id);

        if (_sessao != null)
        {
            tipoDeSessao = _sessao;
        }
        else
        {
            erro = "Tipo de sessão não encontrado.";
        }
    }

    private void Excluir()
    {
        try
        {
            tipoDeSessaoDAO.Excluir(tipoDeSessao.Id);

            Navigation.NavigateTo("/ListaSessao");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir o tipo de sessao: {ex.Message}";
        }

    }
}