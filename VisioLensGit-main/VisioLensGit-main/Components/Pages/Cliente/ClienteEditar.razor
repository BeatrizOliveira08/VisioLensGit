@page "/Cliente/{Id:int}/editar"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject ClienteDAO clienteDAO;
@inject NavigationManager Navigation;

<PageTitle>Cliente</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Cliente - @cliente.Nome</h1>
<link rel="stylesheet" href="bootstrap/agendamento/agendamentoedicao.css" />

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="cliente" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="Nome" class="block text-sm font-medium text-gray-700">Nome</label>
        <input @bind-value="cliente.Nome" type="text" id="Nome"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="Cpf" class="block text-sm font-medium text-gray-700">CPF</label>
        <input @bind-value="cliente.CPF" type="text" id="cpf"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
   
    <div class="mb-4">
        <label for="telefone" class="block text-sm font-medium text-gray-700">Telefone</label>
        <input @bind-value="cliente.Telefone" type="text" id="telefone"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="Email" class="block text-sm font-medium text-gray-700">E-mail</label>
        <input @bind-value="cliente.Email" type="text" id="email"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>


    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Cliente cliente { get; set; } = new();

    protected override void OnInitialized()
    {
        var _cliente = clienteDAO.BuscarPorId(Id);

        if (_cliente != null)
        {
            cliente = _cliente;
        }
        else
        {
            erro = "Cliente não encontrado.";
        }
    }

    private void Salvar()
    {
        try
        {
            clienteDAO.Atualizar(cliente);

            Navigation.NavigateTo("/ListaCliente");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar o cliente: {ex.Message}";
        }

    }
}