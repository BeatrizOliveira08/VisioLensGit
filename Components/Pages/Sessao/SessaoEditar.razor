@page "/Sessao/{Id:int}/editar"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject TipoDeSessaoDAO tipoDeSessaoDAO;
@inject NavigationManager Navigation;

@* <link rel="stylesheet" href="bootstrap/agendamento/agendamentoedicao.css" /> *@

<PageTitle>Sessão</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização tipo de sessão - @tipoDeSessao.Categoria</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="tipoDeSessao" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="Duracao" class="block text-sm font-medium text-gray-700">Duracao</label>
        <input @bind-value="tipoDeSessao.Duracao" type="text" id="duracao"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="PrecoPadrao" class="block text-sm font-medium text-gray-700">Preco Padrao</label>
        <input @bind-value="tipoDeSessao.PrecoPadrao" type="text" id="preco"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="QuantidadeFotos" class="block text-sm font-medium text-gray-700">Quantidade de Fotos</label>
        <input @bind-value="tipoDeSessao.Quantidade" type="text" id="quantidade"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="Entrega" class="block text-sm font-medium text-gray-700">Entrega</label>
        <input @bind-value="tipoDeSessao.Entrega" type="text" id="entrega"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="Observacoes" class="block text-sm font-medium text-gray-700">Observacao</label>
        <input @bind-value="tipoDeSessao.Observaçao" type="text" id="observacao"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="categoria" class="block text-sm font-medium text-gray-700">Categoria</label>
        <input @bind-value="tipoDeSessao.Categoria" type="text" id="categoria"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private TipoDeSessao tipoDeSessao { get; set; } = new();

    protected override void OnInitialized()
    {
        var _tipoDeSessao = tipoDeSessaoDAO.BuscarPorId(Id);

        if (_tipoDeSessao != null)
        {
            tipoDeSessao = _tipoDeSessao;
        }
        else
        {
            erro = "Sessão não encontrada.";
        }
    }

    private void Salvar()
    {
        try
        {
            tipoDeSessaoDAO.Atualizar(tipoDeSessao);

            Navigation.NavigateTo("/ListaSessao");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar a sessão: {ex.Message}";
        }

    }
}