@page "/Cliente/novo"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject ClienteDAO clienteDAO;
@inject NavigationManager Navigation;

<PageTitle>Cliente - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Cliente</h1>
<link href="/bootstrap/Colaborador.css" rel="stylesheet" />
@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novoCliente" OnSubmit="Salvar">
            <div class="form-group mb-4">
                <label>Nome</label>
                <input @bind-value="_novoCliente!.Nome" type="text" class="form-control" name="Nome"
                       placeholder="Informe seu Nome" />
            </div>

            <div class="form-group mb-4">
                <label>CPF</label>
                <input @bind-value="_novoCliente!.CPF" type="text" class="form-control" name="cpf"
                       placeholder="Informe seu CPF" />
            </div>

            <div class="form-group mb-4">
                <label>Telefone</label>
                <input @bind-value="_novoCliente!.Telefone" type="text" class="form-control" name="Telefone"
                       placeholder="Informe seu telefone" />
            </div>

            <div class="form-group mb-4">
                <label>E-mail</label>
                <input @bind-value="_novoCliente!.Email" type="text" class="form-control" name="Email"
                       placeholder="Informe seu E-mail" />
            </div>


            <button type="submit" class="btn btn-primary">Salvar</button>
        </EditForm>
    </div>
</div>

@code {
    private string? erro = null;

    [SupplyParameterFromForm]

    private Cliente? _novoCliente { get; set; } = new Cliente();

    private void Salvar()
    {
        try
        {
            if (_novoCliente.Nome is null || _novoCliente.Nome == " ")
            {
                throw new Exception("O campo Nome é obrigatório");
            }
            else
            {
                Console.WriteLine("Cliente Salvo!!");
            }

            clienteDAO.Inserir(_novoCliente);

            Navigation.NavigateTo("/Cliente");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }

}

