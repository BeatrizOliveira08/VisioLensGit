@page "/Colaborador/{Id:int}/excluir"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject ColaboradorDAO colaboradorDAO;
@inject NavigationManager Navigation;

<link rel="stylesheet" href="/bootstrap/agendamento/agendamentoexcluir.css" />

<PageTitle>Colaborador</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Colaborador</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}


<EditForm Model="colaborador" OnSubmit="Excluir">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Atenção!</strong>
        <span class="block sm:inline">Esta ação não pode ser desfeita.</span>
        <p class="text-lg">Tem certeza que deseja excluir o colaborador <strong>@colaborador.Nome</strong>?</p>

    </div>


    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
    <a href="/Colaborador" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Colaborador colaborador { get; set; } = new();

    protected override void OnInitialized()
    {
        var _colaborador = colaboradorDAO.BuscarPorId(Id);

        if (_colaborador != null)
        {
            colaborador = _colaborador;
        }
        else
        {
            erro = "Colaborador não encontrado.";
        }
    }

    private void Excluir()
    {
        try
        {
            colaboradorDAO.Excluir(colaborador.Id);

            Navigation.NavigateTo("/Colaborador");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir o Colaborador: {ex.Message}";
        }

    }
}
