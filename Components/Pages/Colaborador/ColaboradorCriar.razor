@page "/Colaborador/novo"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject ColaboradorDAO colaboradorDAO;
@inject NavigationManager Navigation;

<PageTitle>Colaborador - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Colaborador</h1>
<link href="/bootstrap/Colaborador.css" rel="stylesheet" />
@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novoColaborador" OnSubmit="Salvar">
            <div class="form-group mb-4">
                <label>Nome</label>
                <input @bind-value="_novoColaborador!.Nome" type="text" class="form-control" name="Nome"
                       placeholder="Informe seu Nome" />
            </div>

            <div class="form-group mb-4">
                <label>Data Nascimento</label>
                <input @bind-value="_novoColaborador!.Data_Nascimento" type="date" class="form-control" name="dataNascimento"
                       placeholder="Informe a data de nascimento" />
            </div>

            <div class="form-group mb-4">
                <label>Telefone</label>
                <input @bind-value="_novoColaborador!.Telefone" type="text" class="form-control" name="Telefone"
                       placeholder="Informe seu telefone" />
            </div>

            <div class="form-group mb-4">
                <label>E-mail</label>
                <input @bind-value="_novoColaborador!.Email" type="text" class="form-control" name="Email"
                       placeholder="Informe seu E-mail" />
            </div>


            <button type="submit" class="btn btn-primary">Salvar</button>
        </EditForm>
    </div>
</div>

@code {
    private string? erro = null;

    [SupplyParameterFromForm]

    private Colaborador? _novoColaborador { get; set; } = new Colaborador();

    private void Salvar()
    {
        try
        {
            if (_novoColaborador.Nome is null || _novoColaborador.Nome == " ")
            {
                throw new Exception("O campo Nome é obrigatório");
            }
            else
            {
                Console.WriteLine("Colaborador Salvo!!");
            }

            colaboradorDAO.Inserir(_novoColaborador);

            Navigation.NavigateTo("/Colaborador");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }

}
