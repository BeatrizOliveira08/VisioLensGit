@page "/Agendamento/{Id:int}/excluir"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject AgendamentoDAO agendamentoDAO;
@inject NavigationManager Navigation;

<PageTitle>Agendamento</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Agendamento</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}


<EditForm Model="agendamento" OnSubmit="Excluir">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Atenção!</strong>
        <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


        <p class="text-lg">Tem certeza que deseja excluir o agendamento <strong>@agendamento.Cliente</strong>?</p>
    </div>


    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
    <a href="/Agendamento" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Agendamento agendamento { get; set; } = new();

    protected override void OnInitialized()
    {
        var _agendamento = agendamentoDAO.BuscarPorId(Id);

        if (_agendamento != null)
        {
            agendamento = _agendamento;
        }
        else
        {
            erro = "Agendamento não encontrado.";
        }
    }

    private void Excluir()
    {
        try
        {
            agendamentoDAO.Excluir(agendamento.Id);

            Navigation.NavigateTo("/Agendamento");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir o Agendamento: {ex.Message}";
        }

    }
}