@page "/Agendamento/{Id:int}/editar"
@rendermode InteractiveServer

@using VisioLens_Blazor.Models;
@inject AgendamentoDAO agendamentoDAO;
@inject NavigationManager Navigation;

<PageTitle>Agendamento</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Agendamento - @agendamento.Cliente</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="agendamento" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="cliente" class="block text-sm font-medium text-gray-700">Cliente</label>
        <input @bind-value="agendamento.Cliente" type="text" id="cliente"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="data" class="block text-sm font-medium text-gray-700">Data</label>
        <input @bind-value="agendamento.Data" type="date" id="data"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="tipodesessao" class="block text-sm font-medium text-gray-700">TipoDeSessao</label>
        <input @bind-value="agendamento.TipoDeSessao" type="text" id="tipoDeSessao"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="duracao" class="block text-sm font-medium text-gray-700">Duracao</label>
        <input @bind-value="agendamento.Duracao" type="text" id="duracao"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="fotografo" class="block text-sm font-medium text-gray-700">Fotografo</label>
        <input @bind-value="agendamento.Fotografo" type="text" id="fotogravo"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="observacao" class="block text-sm font-medium text-gray-700">Observacao</label>
        <textarea id="observacao"
                  class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">@agendamento.Observacao</textarea>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Agendamento agendamento { get; set; } = new();

    protected override void OnInitialized()
    {
        var _agendamento = agendamentoDAO.BuscarPorId(Id);

        if (_agendamento != null)
        {
            agendamento = _agendamento;
        }
        else
        {
            erro = "Agendamento não encontrado.";
        }
    }

    private void Salvar()
    {
        try
        {
            agendamentoDAO.Atualizar(agendamento);

            Navigation.NavigateTo("/agendamentos");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar o agendamento: {ex.Message}";
        }

    }
}